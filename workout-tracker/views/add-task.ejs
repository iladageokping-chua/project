<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Goal</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            customGray: '#333'
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">

  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-1/4 bg-customGray text-white p-6 flex flex-col">
      <h1 class="text-2xl font-bold mb-6">Workout Tracker</h1>
      <nav>
        <a href="/list" class="flex items-center bg-gray-700 px-4 py-2 rounded-lg hover:bg-gray-600 transition">
          üìã Goal List
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">
      <div class="bg-white shadow-lg rounded-xl p-6 max-w-lg mx-auto">
        <h2 class="text-xl font-bold text-customGray mb-2">Add a Goal</h2>
        
        <form action="/add-task" method="POST" class="space-y-4 mt-4">
          <!-- Title -->
          <div>
            <label class="block text-gray-700 font-medium">Title</label>
            <input type="text" name="name" required
              class="w-full p-2 bg-gray-100 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-customGray">
          </div>

          <!-- Goal -->
          <div>
            <label class="block text-gray-700 font-medium">Goal</label>
            <input type="text" name="goal" required
              class="w-full p-2 bg-gray-100 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-customGray">
          </div>

          <!-- Date -->
          <div>
            <label class="block text-gray-700 font-medium">Due Date</label>
            <input type="date" name="date" required
              class="w-full p-2 bg-gray-100 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-customGray">
          </div>

          <!-- Notes -->
          <div>
            <label class="block text-gray-700 font-medium">Notes</label>
            <textarea name="notes" rows="3"
              class="w-full p-2 bg-gray-100 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-customGray"></textarea>
          </div>

          <!-- Submit -->
          <div class="text-center pt-4">
            <button type="submit"
              class="bg-customGray text-white px-6 py-2 rounded-md font-semibold hover:bg-gray-800 transition">
              Add Goal
            </button>
          </div>
        </form>

        <div class="text-center mt-4">
          <a href="/list" class="text-customGray hover:text-gray-700 transition">‚Üê Back to Goal List</a>
        </div>
      </div>
    </main>
  </div>

</body>
</html>
