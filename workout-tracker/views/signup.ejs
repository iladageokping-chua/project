<!-- signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {
            background: url('/images/pexels-victorfreitas-841130.jpg') no-repeat center center fixed;
            background-size: cover;
            padding-top: 70px;
            display: flex;
            justify-content: center;  
            align-items: center;      
            height: 100vh;            
            margin: 0;
        }
        body, h1, p, a {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .navbar {
            position: fixed; 
            top: 0;
            left: 0;
            width: 100%;
            background: #222;
            padding: 15px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000; 
        }

        .navbar .logo {
            display: flex;
            align-items: center;
        }

        .navbar .logo img {
            width: 50px;
            margin-right: 10px;
            border-radius: 10px;
        }

        .navbar .menu a {
            color: white;
            text-decoration: none;
            margin-left: 15px;
        }

        .menu {
            display: flex;
            align-items: center;
            gap: 3px;
            margin-left: auto;
            padding-right: 20px;      
        }

        .menu ul {
            display: flex;
            padding: 0 10px; 
            margin: 0;
            list-style: none;
            justify-content: center; 
        }
        
        .menu li {
            margin: 0 10px; 
        }
        
        .menu a {
            display: inline-block;
            padding: 10px 20px; 
            background-color: #0066be;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s ease;
        }
        
        .menu a:hover {
            background-color: #4199fd;
        }
        

        .navbar .menu a:hover {
            color: white;
            text-decoration: underline;
        }

        .navbar .btn {
            
            background: #007bff;
            padding: 8px 12px;
            border-radius: 10px;
        }

        .bth {
            background-color: #0066be;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .bth:hover {
            background-color: #4199fd; 
        }

        /* Sign Up Form */
        .signup-form {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
        }

        .signup-form input {
            width: 95%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        
        .signup-form button {
            width: 100%;
            padding: 10px;
            background-color: #0066be;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .signup-form button:hover {
            background-color: #4199fd;
        }
        
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="logo">
            <img src="/images/iconweb.png" alt="Logo">
            <div>Workout Tracker</div>
        </div>
        <div class="menu">
            <ul>
                <li><a href="/" class="bth">Home</a></li>
            </ul>
        </div>
    </nav>

    <section class="signup-form">
        <h2>Create an Account</h2>
        <form action="/signup" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Sign Up</button>
        </form>
    </section>

</body>
</html>
